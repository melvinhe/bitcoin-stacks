        (map-set stakes { staker: tx-sender, collection: 'SP2KAF9RF86PVX3NEE27DFV1CQX0T4WGR41X3S45C.bitcoin-monkeys, item: item } { stake-time: block, points: points-added, bgr: bgr  })
